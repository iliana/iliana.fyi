{
  "scripts": {
    "build": "webpack --node-env production && zola build && lib/fix.sh",
    "dev": "concurrently --kill-others \"zola serve --drafts\" \"webpack --watch\"",
    "fix": "prettier -w . && eslint --ext .js,.jsx --fix ."
  },
  "dependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@svgr/babel-preset": "^6.2.0",
    "@svgr/webpack": "^6.2.1",
    "@tailwindcss/typography": "^0.5.2",
    "autoprefixer": "^10.4.4",
    "babel-loader": "^8.2.4",
    "classnames": "^2.3.1",
    "css-loader": "^6.7.1",
    "cssnano": "^5.1.7",
    "eval": "^0.1.8",
    "fast-glob": "^3.2.11",
    "heroicons": "^1.0.6",
    "inter-ui": "^3.19.3",
    "ionicons": "^6.0.1",
    "mini-css-extract-plugin": "^2.6.0",
    "postcss-loader": "^7.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.0.23",
    "webpack": "^5.71.0",
    "webpack-cli": "^4.9.2"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "@babel/eslint-plugin": "^7.17.7",
    "@squoosh/cli": "^0.7.2",
    "concurrently": "^7.0.0",
    "eslint": "^8.13.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.6.1"
  },
  "prettier": {
    "printWidth": 120,
    "proseWrap": "never",
    "htmlWhitespaceSensitivity": "ignore"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "public/",
      "static/"
    ],
    "parser": "@babel/eslint-parser",
    "plugins": [
      "@babel"
    ],
    "extends": [
      "airbnb",
      "prettier"
    ],
    "rules": {
      "import/order": [
        "error",
        {
          "newlines-between": "never",
          "alphabetize": {
            "order": "asc"
          }
        }
      ],
      "no-multi-assign": [
        "error",
        {
          "ignoreNonDeclaration": true
        }
      ],
      "react/prop-types": "off"
    }
  },
  "browserslist": [
    "defaults",
    "not ie 11"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  }
}
