{
  "scripts": {
    "build": "NODE_ENV=production webpack && eleventy --passthroughall",
    "dev": "concurrently --kill-others \"eleventy --passthroughall --serve\" \"webpack --watch\"",
    "fix": "prettier -w . && eslint --ext .js,.jsx --fix ."
  },
  "dependencies": {
    "@11ty/eleventy": "^2.0.0-canary.15",
    "@11ty/eleventy-img": "^2.0.1",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@svgr/babel-preset": "^6.2.0",
    "@tailwindcss/typography": "^0.5.2",
    "autoprefixer": "^10.4.4",
    "babel-loader": "^8.2.4",
    "css-loader": "^6.7.1",
    "cssnano": "^5.1.7",
    "dayjs": "^1.11.4",
    "fast-glob": "^3.2.11",
    "hast-util-select": "^5.0.2",
    "hast-util-to-string": "^2.0.0",
    "heroicons": "^2.0.8",
    "html-minifier": "^4.0.0",
    "inter-ui": "^3.19.3",
    "ionicons": "^6.0.1",
    "mini-css-extract-plugin": "^2.6.0",
    "postcss": "^8.4.16",
    "postcss-dark-theme-class": "^0.7.3",
    "postcss-loader": "^7.0.0",
    "rehype-raw": "^6.1.1",
    "rehype-stringify": "^9.0.3",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "remark-smartypants": "^2.0.0",
    "shiki": "^0.10.1",
    "svgo": "^2.8.0",
    "tailwindcss": "^3.0.23",
    "unified": "^10.1.2",
    "webpack": "^5.71.0",
    "webpack-cli": "^4.9.2",
    "webpack-remove-empty-scripts": "^0.8.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "@babel/eslint-plugin": "^7.17.7",
    "concurrently": "^7.0.0",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.6.1",
    "prettier-plugin-tailwindcss": "^0.1.13"
  },
  "prettier": {
    "printWidth": 120,
    "proseWrap": "never"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "!/.eleventy.js",
      "dist/",
      "public/",
      "static/"
    ],
    "parser": "@babel/eslint-parser",
    "plugins": [
      "@babel"
    ],
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "rules": {
      "import/order": [
        "error",
        {
          "newlines-between": "never",
          "alphabetize": {
            "order": "asc"
          }
        }
      ]
    }
  },
  "browserslist": [
    "defaults and supports arrow-functions"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env",
      [
        "@babel/preset-react",
        {
          "runtime": "classic",
          "pragma": "h"
        }
      ]
    ]
  }
}
